            label(for='anonymous', class='identity-label')
                input(type='radio', id='anonymous', name='identity', value='Anonymous', checked)
                div.checkmark
                span Anonymous

            label(for='email', class='email-label')
                input(type='radio', id='email', name='identity', value='Email')
                div.checkmark
                span Email
                input(type='text', class='email-input', name='message', placeholer='Email')
